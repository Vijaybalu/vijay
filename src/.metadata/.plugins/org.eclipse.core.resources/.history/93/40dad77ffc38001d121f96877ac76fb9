package THEMES;

public class Area_of_triangle {
	
	int l;
	int b;
	short p;
	long r;
	int t;
	

	public static void main(String[] args) {
		Area_of_triangle obj1 = new Area_of_triangle();
		obj1.l=5;
		obj1.b=4;
		obj1.p=7;
		obj1.t=10;
		obj1.r=25;
		
		System.out.println("length :"+ obj1.l);
		System.out.println("breadth :"+ obj1.b);
		System.out.println("Area of triangle is = "+((0.5)*obj1.l*obj1.b)+"m");
		System.out.println("Principal amount "+obj1.p);
		System.out.println("Rate of intrest per year in decimal = "+ obj1.r);
		System.out.println("time period involved ="+ obj1.t);
		System.out.println("Simple Intrest "+(obj1.p*obj1.r*obj1.t)/100);
		

	}

}
